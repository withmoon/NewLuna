<mapper namespace="managerApproveDAO">
	<!-- 지점장 목록 -->
	<select id="approveList" resultType="adminManagerApproveVO">
		<include refid="pagingHeader"></include>
     	 select
      	 id,pw,name,phone,birth,email,branchName,zipcode,branchaddr1,branchaddr2,brStatus,position
     	 from member where brStatus = -1
		<include refid="pagingFooter"></include>
   </select>
   
   <!-- 게시글갯수 -->
	<select id="countEvent" resultType="int">
		select count(*) from adminevent where enddate > sysdate
	</select>
	
	<!-- 페이징 sql -->
	  <sql id="pagingHeader">
	 	select * from ( select rownum as rn, A.* from(
	 </sql>
	 <sql id="pagingFooter">
	 		)A
	 	)where rn  between #{start} and #{end}
	 </sql>
</mapper>