<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="roomDAO">
	<!-- 방찾기용 -->
	<!-- 시/도 가져오기 -->
	<select id="getSido" resultType="String">
		select DISTINCT	SUBSTR(branchaddr1,0,2) from member where position='지점장'
	</select>
	
	<select id="getGugun" resultType="String">
		<![CDATA[select DISTINCT SUBSTR(branchaddr1,INSTR(branchaddr1, ' ', 1,1)+1,INSTR(branchaddr1, ' ',1,1)+1)  
		from member where branchaddr1 like #{sido}|| '%']]>
	</select>
	
	<!-- 방정보 가져오기 -->
	<select id="getRoomInfo" resultType="roomInfo">
		select * from room
	</select>
	
	<!-- 스케줄 가져오기 -->
	<select id="getRoomSchedule">
		<![CDATA[select reservstate from roomReserv where roomNum=#{roomNum} and regdate>to_date(to_char(sysdate,'yyyy-mm-dd'))
		]]>
	</select>
	
	<!-- 예약 집어넣기 -->
	<insert id="inReserveRoom">
		<![CDATA[insert into roomReserv values(#{roomNum},#{reservstate},sysdate)]]>
	</insert>
	<update id="upReserveRoom">
		<![CDATA[update roomReserv set reservstate=concat(reservstate,#{reservstate})]]>
	</update>
	
</mapper>