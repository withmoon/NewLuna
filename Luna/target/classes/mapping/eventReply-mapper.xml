<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="eventReplyDAO">
	<!-- 댓글 입력 -->
	<insert id="eReplyInsert" parameterType="eReply">
		insert into EventReply values (EventReply_seq.NEXTVAL, #{seq}, #{replytext}, #{replyer})
	</insert>
	
	<!-- 댓글 목록 -->
	<select id="eReplyList" resultType="eReply">
		select * from EventReply r, member m
		where r.replyer = m.id and seq=#{seq}
		order by rno
	</select>
</mapper>